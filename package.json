{
  "name": "jurivalida",
  "version": "1.0.0",
  "description": "JuriValida - Assistente para preenchimento e validação jurídica.",
  "main": "src/main/main.js",
  "author": "JuriValida",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist",
    "build:css": "tailwindcss -c ./tailwind.config.js -i ./src/style/input.css -o ./src/style/output.css",
    "watch:css": "tailwindcss -c ./tailwind.config.js -i ./src/style/input.css -o ./src/style/output.css --watch",
    "start": "npm run build:css && electron .",
    "build": "npm run clean && npm run build:css && electron-builder"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "pdf-parse": "^2.4.5",
    "portfinder": "^1.0.38",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.jurivalida.app",
    "productName": "JuriValida",
    "directories": {
      "output": "dist",
      "buildResources": "src/assets/img"
    },
    "files": [
      "src/**/*",
      "package.json",
      "tailwind.config.js"
    ],
    "asarUnpack": [
      "src/server/**/*",
      "node_modules/pdf-parse/**/*",
      "node_modules/tesseract.js/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/img/juvivalida_mini_logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JuriValida",
      "installerIcon": "src/assets/img/juvivalida_mini_logo.png",
      "uninstallerIcon": "src/assets/img/juvivalida_mini_logo.png",
      "installerHeaderIcon": "src/assets/img/juvivalida_mini_logo.png"
    }
  }
}
